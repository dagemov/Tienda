
@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Users</li>
</ol>
<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-1"></i>Users List
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="createUser()">Create new</button>
            </div>
        </div>
        <hr />
        User Table
        <!--<table id="IdTableUser" class="table table-dark table-striped display cell-border" style="width : 100%">-->
        <table id="IdTableUser" class="table table-dark display cell-border" style="width : 100%">
            <thead>
                <tr>
                    <th class="sorting" tabindex="0" aria-controls="TASK_LIST_GRID" rowspan="1" colspan="1">Names</th>
                    <th class="sorting" tabindex="0" aria-controls="TASK_LIST_GRID" rowspan="1" colspan="1">LastNames</th>
                    <th class="sorting" tabindex="0" aria-controls="TASK_LIST_GRID" rowspan="1" colspan="1">Email</th>
                    <th class="sorting" tabindex="0" aria-controls="TASK_LIST_GRID" rowspan="1" colspan="1">Password</th>
                    <th class="sorting" tabindex="0" aria-controls="TASK_LIST_GRID" rowspan="1" colspan="1">Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="ModalUser" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="ModalUserCreate">Users Creator</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body g-2">
                <div class="row">
                    <div class="col-sm-6">
                        <label for="Names" class="form-label">Names</label>
                        <input type="text" class="form-control" id="Names">
                    </div>
                    <div class="col-sm-6">
                        <label for="LastNames" class="form-label">LastNames</label>
                        <input type="text" class="form-control" id="LastNames">
                    </div>
                    <div class="col-sm-6">
                        <label for="userEmail" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="userEmail" placeholder="name@example.com">
                    </div>
                    <div class="col-sm-6">
                        <label for="userPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="userPassword">
                    </div>
                    <div class="col-sm-6">
                        <label for="activeSelect" class="form-label">Active</label>
                        <select id="activeSelect" class="form-select col-sm-6" >
                            <option selected>Open this select menu</option>
                            <option value="1">On</option>
                            <option value="0">Of</option>
                        </select>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<!--
    AJAX , para pintar lo que tenemos en la base de datos en la tabla tbody
-->
@section scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>

        var tabladata;
        var filaSeleccionada;
        tabladata = $("#IdTableUser").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("UsersList", "Home")',
                type: "GET",
                dataType: "json"
            }
            ,
            "columns": [
                { "data": "Nombres" },
                { "data": "Apellidos" },
                { "data": "Correo" },
                { "data": "Clave" },
                {
                    "data": "Activo", "render": function (value) {
                        if (value) {
                            return '<span class="badge bg-success">On</span>'
                        } else {
                            return '<span class="badge bg-success">Of</span>'
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-edit"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width":"90px",
                }


            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            },
        });
        function createUser() {
            $("#ModalUser").modal("show");
        }
        //Action modifict
        $("#IdTableUser tbody").on("click", '.btn-edit', function () {

            var filaSeleccionada = $(this).closest("tr");

            var data = tabladata.row(filaSeleccionada).data();
            console.log(data);

            //abrirModal(data)

        });
    </script>

}
